<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soulone.saywithpics">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.addActivity"></activity>
        <activity
            android:name=".Activities.RoutineDetailActivity"
            android:label="@string/title_activity_routine_detail"
            android:parentActivityName=".Activities.RoutinesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.soulone.saywithpics.Activities.RoutinesActivity" />
        </activity>
        <activity
            android:name=".Activities.RoutinesActivity"
            android:label="@string/title_activity_rutinas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.EmailRegistrerActivity"
            android:label="@string/title_activity_email_registrer"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.EmailSingInActivy"
            android:label="@string/title_activity_email_sing_in_activy"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>